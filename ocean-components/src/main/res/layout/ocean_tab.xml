<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.util.List" />

        <import type="androidx.lifecycle.MutableLiveData" />

        <import type="kotlin.jvm.functions.Function1" />

        <import type="kotlin.Unit" />

        <variable
            name="labels"
            type="MutableLiveData&lt;List&lt;String>>" />

        <variable
            name="counters"
            type="MutableLiveData&lt;List&lt;Integer>>" />

        <variable
            name="tabSelected"
            type="Function1&lt;Integer, Unit>" />

        <variable
            name="defaultSelected"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tab_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:setCounters="@{counters}"
            app:setDefaultSelected="@{defaultSelected}"
            app:setLabels="@{labels}"
            app:setTabSelected="@{tabSelected}" />

        <include layout="@layout/ocean_divider" />

    </LinearLayout>
</layout>
